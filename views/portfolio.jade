  //- Import External Stylesheet



  style.

      /* Basic resets */
      * {
        margin: 0 !important;
        padding: 0 !important;
        box-sizing: border-box !important;
      }

      /* Use 'Verdana' as in the video background snippet */
      body, html {
        width: 100% !important;
        min-height: 100% !important;
        font-family: 'Verdana', sans-serif !important;
        background-color: transparent !important;
        overflow-y: auto !important;
      }

      /* Video Background */
      .video-background {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        min-width: 100% !important;
        min-height: 100% !important;
        width: auto !important;
        height: auto !important;
        object-fit: cover !important;
        z-index: -1 !important;
      }

      /* Main container for the entire portfolio */
      .loading-screen-container {
        position: relative !important;
        display: flex !important;
        flex-direction: column !important;
        align-items: center !important;
        text-align: center !important;
        min-height: 100vh !important;
        width: 100% !important;
      }

      /* Dark overlay above the video */
      .overlay-rectangle {
        position: absolute !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        height: 100% !important;
        background-color: rgba(12, 9, 9, 0.5) !important;
        z-index: 0 !important;
      }

      /* -------------------
        Portfolio Styles
      ------------------- */

      /* Improve Heading Colors */
      h1, h2, h3, h4, h5, h6 {
        color: #1B2A49 !important;
        font-weight: bold !important;
        text-align: center !important;
      }

      /* Fix Text Spacing */
      p, li {
        color: #333 !important;
        line-height: 1.85 !important;
        letter-spacing: 0.2px !important;
        word-spacing: 0.5px !important;
        text-align: left !important;
        max-width: 700px !important;
        margin-left: auto !important;
        margin-right: auto !important;
      }

      /* Force consistent paragraph spacing */
      p {
        margin-bottom: 16px !important;
      }

      /* Fix list item spacing */
      ul {
        padding-left: 5px !important;
        margin-bottom: 10px !important;
      }

      ul li {
        margin-bottom: 2px !important;
        padding-left: 2px !important;
      }

      /* Improve Links */
      a {
        color: #0044cc !important;
        text-decoration: none !important;
        font-weight: bold !important;
        display: inline-block !important;
        margin-bottom: 8px !important;
      }

      a:hover {
        text-decoration: underline !important;
        color: #0066ff !important;
      }

      /* Projects Section */
      .project-grid {
        display: flex !important;
        flex-wrap: wrap !important;
        justify-content: center !important;
        align-items: flex-start !important;
        margin-top: 20px !important;
        padding: 0 20px !important;
        z-index: 2 !important;
      }

      /*
        By default (on tablets, desktops, etc.), 
        show two columns by giving each project ~50% width.
      */
      .project-item {
        flex: 0 0 calc(50% - 40px) !important; /* two columns on bigger screens */
        margin: 20px !important;
        background: #F5F5DC !important;
        border-radius: 12px !important;
        padding: 24px !important;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1) !important;
        text-align: center !important;
        transition: transform 0.3s ease-in-out !important;
      }

      .project-item:hover {
        transform: scale(1.02) !important;
      }

      /* Project Title */
      .project-item h3 {
        margin-bottom: 12px !important;
        font-size: 22px !important;
        color: #1B2A49 !important;
        font-weight: bold !important;
        text-align: center !important;
      }

      /* Improve Image Layout */
      .project-img {
        width: 100% !important;
        max-width: 500px !important;
        height: auto !important;
        aspect-ratio: 4 / 3 !important;
        margin-bottom: 15px !important;
        border-radius: 8px !important;
        object-fit: cover !important;
        transition: transform 0.3s ease-in-out !important;
      }

      .project-img:hover {
        transform: scale(1.05) !important;
      }

      /* Improve Bullet Points */
      ul li::before {
        content: "â€¢" !important;
        color: #1B2A49 !important;
        font-weight: bold !important;
        position: absolute !important;
        left: -20px !important;
      }

      /* Personal Projects Section */
      section.personal-projects {
        position: relative !important;
        z-index: 2 !important;
        background-color: #fff !important;
        border-radius: 8px !important;
        margin: 40px auto !important;
        max-width: 1200px !important;
        padding: 24px !important;
      }

      /* Ensure text is not too wide */
      .project-item p,
      .project-item ul {
        max-width: 700px !important;
        margin-left: auto !important;
        margin-right: auto !important;
      }

      /* --------
        Responsive Adjustments
      --------- */

      /*
        On screens <= 768px (mobile-ish),
        stack projects with full width
      */
      @media (max-width: 768px) {
        .project-item {
          flex: 0 0 calc(100% - 40px) !important;
          margin: 20px !important;
        }

        .project-img {
          max-width: 90% !important;
          margin: 0 auto 15px auto !important;
        }

        p, ul li {
          line-height: 1.9 !important;
        }
      }

      /* Even smaller phones */
      @media (max-width: 480px) {
        .project-grid {
          padding: 0 5px !important;
        }

        .project-item {
          width: calc(100% - 20px) !important;
          padding: 20px !important;
          margin: 10px !important; /* Tweak margin if needed */
        }

        .project-img {
          max-width: 100% !important;
          max-height: 180px !important;
        }

        h1, h2, h3 {
          font-size: 20px !important;
        }

        p {
          font-size: 14px !important;
        }
      }





