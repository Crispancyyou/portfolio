  //- Inline CSS
  style.
    /* General Styles */
    body {
      margin: 0;
      padding: 0;
      font-family: "Lucida Grande", Helvetica, Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      background-color: #f9f9f9;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
      font-size: 36px;
      color: #333;
    }

    a {
      color: #00B7FF;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Projects Section */
    .project-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      margin-top: 20px;
    }

    .project-item {
      flex: 1 1 calc(50% - 20px); /* Two items per row */
      max-width: calc(50% - 20px);
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
      text-align: center;
    }

    .project-item h3 {
      margin-bottom: 10px;
      font-size: 20px;
      color: #222;
    }

    .project-img {
      width: 100%;
      max-width: 400px;
      height: auto;
      max-height: 300px;
      aspect-ratio: 4 / 3; /* Ensures consistent aspect ratio */
      margin-bottom: 10px;
      border-radius: 8px;
      object-fit: cover; /* Ensures the image fills the box while maintaining aspect ratio */
    }

    .project-item p, .project-item a {
      margin: 0.5rem 0; /* Adjust the spacing */
      display: block; /* Ensures each paragraph and link is treated as a block element */
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .project-item {
        flex: 1 1 100%; /* Stack items vertically */
        max-width: 100%;
      }
      
      .project-item p, .project-item a {
        margin: 0.5rem 0; /* Adjust the spacing */
        display: block; /* Ensures each paragraph and link is treated as a block element */
      }


      .project-img {
        max-width: 100%; /* Adjust image size for mobile */
        max-height: 200px; /* Adjusted for smaller screens */
      }
    }





