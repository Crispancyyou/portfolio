extends layout

block content
  //- --------------------------
  //- Combined Style
  //- --------------------------
  style.
    /* Basic resets */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Use 'Verdana' as in the video background snippet */
    body, html {
      width: 100%;
      min-height: 100%; /* Ensure body grows with content */
      font-family: 'Verdana', sans-serif;
      background-color: transparent; /* So we see the video behind */
      overflow-y: auto; /* Allow the browser window to scroll normally */
    }

    /* Video Background */
    .video-background {
      position: fixed;
      top: 0;
      left: 0;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      object-fit: cover;
      z-index: -1; /* Ensures video stays behind everything else */
    }

    /* Main container for the entire portfolio */
    .loading-screen-container {
      position: relative; /* Allows absolutely positioned children */
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      min-height: 100vh;
      width: 100%;
    }

    /* Dark overlay above the video */
    .overlay-rectangle {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(12, 9, 9, 0.5); /* 50% black overlay */
      z-index: 0;
    }

    /* -------------------
       Portfolio Styles
    ------------------- */

    /* Make all headings red! */
    h1, h2, h3, h4, h5, h6 {
      color: #f00 !important;
    }

    a {
      color: #00B7FF;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }

    /* Projects Section */
    .project-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      margin-top: 20px;
      padding: 0 20px; /* Add side padding so items don't touch the edges */
      z-index: 2;      /* Ensure these float above the overlay */
    }

    .project-item {
      flex: 1 1 calc(50% - 20px);
      max-width: calc(50% - 20px);
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
      text-align: center;
    }

    .project-item h3 {
      margin-bottom: 10px;
      font-size: 20px;
      /* color overridden by global heading override above */
    }

    .project-img {
      width: 100%;
      max-width: 400px;
      height: auto;
      max-height: 300px;
      aspect-ratio: 4 / 3; /* Ensures consistent aspect ratio */
      margin-bottom: 10px;
      border-radius: 8px;
      object-fit: cover;
    }

    .project-item p,
    .project-item a {
      margin: 0.5rem 0;
      display: block;
    }

    /* Make “Personal Projects” section fully visible above overlay */
    section.personal-projects {
      position: relative;
      z-index: 2;
      background-color: #fff; /* White background so it's not dimmed by the overlay */
      border-radius: 8px;
      margin: 40px auto; /* Center with top/bottom spacing */
      max-width: 1200px; /* Wider container if desired */
      padding: 20px;     /* Spacing inside the box */
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .project-item {
        flex: 1 1 100%; /* Stack items vertically */
        max-width: 100%;
      }

      .project-item p,
      .project-item a {
        margin: 0.5rem 0;
        display: block;
      }

      .project-img {
        max-width: 100%;
        max-height: 200px;
      }
    }

  //- --------------------------
  //- Video + Overlay
  //- --------------------------
  video.video-background(
    autoplay
    muted
    loop
    playsinline
    webkit-playsinline
    disablePictureInPicture
    controlsList="nodownload nofullscreen noremoteplayback"
    preload="auto"
  )
    source(src="videos/video.mp4" type="video/mp4")

