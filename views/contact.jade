doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Contact Me
    style.
      /* Reset & base styles */
      * { margin: 0; padding: 0; box-sizing: border-box; }
      html, body {
        width: 100%; height: 100%; overflow: hidden;
        font-family: Verdana, sans-serif;
      }
      
      /* Video Background */
      .video-background {
        position: fixed;
        top: 0; left: 0;
        min-width: 100%; min-height: 100%;
        width: auto; height: auto;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
      }
      
      /* Main container */
      .loading-screen-container {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #f00;
        height: 100vh;
      }
      
      /* Overlay */
      .overlay-rectangle {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background-color: rgba(12, 9, 9, 0.5);
        z-index: 0;
      }
      
      /* Animated background rectangle */
      .animated-bg {
        position: relative;
        z-index: 1;
        background-color: rgba(0, 0, 0, 0.8);
        padding: 2rem;
        border-radius: 8px;
        max-width: 800px;
        margin: 0 20px;
        animation: pulseBg 3s infinite ease-in-out;
      }
      @keyframes pulseBg {
        0%, 100% { background-color: rgba(0, 0, 0, 0.8); }
        50% { background-color: rgba(0, 0, 0, 0.6); }
      }
      .animated-bg h1.game-title,
      .animated-bg .contact {
        position: relative;
        z-index: 2;
      }
      
      /* Heading & contact styling */
      h1.game-title {
        font-size: 3rem;
        text-transform: uppercase;
        margin-bottom: 2rem;
        letter-spacing: 2px;
      }
      h1.game-title,
      .contact,
      .contact a {
        color: #f00;
        text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
      }
      .contact {
        font-size: 1.1rem;
        line-height: 1.6;
      }
      
      /* Unused animated ring (kept for consistency) */
      .selector {
        position: absolute;
        left: -40px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px; height: 20px;
        border: 2px solid #0f0;
        border-radius: 50%;
        animation: ping 1.2s infinite;
      }
      @keyframes ping {
        0% { transform: scale(1) translateY(-50%); opacity: 1; }
        75%, 100% { transform: scale(2) translateY(-50%); opacity: 0; }
      }
      
      /* Responsive adjustments */
      @media screen and (max-width: 768px) {
        h1.game-title { font-size: 2rem; }
      }
